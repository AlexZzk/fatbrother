.spec-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.spec-panel {
  width: 100%;
  max-height: 70vh;
  background-color: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
}

.spec-header {
  display: flex;
  padding: 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
  position: relative;
}

.spec-product-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.spec-product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 12rpx;
}

.spec-product-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #222222;
}

.spec-product-price {
  font-size: 34rpx;
  font-weight: 700;
  color: #FF3B30;
}

.spec-close {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 36rpx;
  color: #999999;
}

.spec-body {
  flex: 1;
  overflow-y: auto;
  padding: 0 24rpx;
}

.spec-group {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.spec-group:last-child {
  border-bottom: none;
}

.spec-group-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.spec-tag {
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 999rpx;
  font-weight: 400;
}

.spec-tag--required {
  background-color: #FFF0F0;
  color: #FF3B30;
}

.spec-tag--multi {
  background-color: #F5F5F5;
  color: #666666;
}

.spec-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.spec-option {
  padding: 12rpx 24rpx;
  border: 2rpx solid #DCDEE0;
  border-radius: 999rpx;
  font-size: 26rpx;
  color: #333333;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.spec-option--selected {
  border-color: #FF6B35;
  background-color: rgba(255, 107, 53, 0.08);
  color: #FF6B35;
}

.spec-delta {
  font-size: 22rpx;
  color: #999999;
}

.spec-option--selected .spec-delta {
  color: #FF6B35;
}

.spec-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.spec-quantity-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.spec-footer {
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #F0F0F0;
}

.spec-confirm-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #FF6B35;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 999rpx;
  border: none;
  text-align: center;
}

.spec-confirm-btn--disabled {
  background-color: #CCCCCC;
}

.spec-confirm-btn::after {
  border: none;
}
