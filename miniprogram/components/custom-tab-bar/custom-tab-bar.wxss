.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 9999;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #999999;
}

.tab-item.active {
  color: #FF6B35;
}

.tab-icon {
  font-size: 40rpx;
  line-height: 1;
  margin-bottom: 4rpx;
  font-style: normal;
  font-weight: normal;
}

.tab-label {
  font-size: 20rpx;
  line-height: 1;
}
