.shop-card {
  display: flex;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.shop-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
  background-color: #F5F5F5;
}

.shop-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 6rpx;
}

.shop-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shop-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #222222;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop-arrow {
  font-size: 24rpx;
  color: #CCCCCC;
  flex-shrink: 0;
  margin-left: 8rpx;
}

.shop-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 22rpx;
}

.shop-rating {
  color: #FF6B35;
  font-weight: 500;
}

.shop-sales {
  color: #666666;
}

.shop-distance {
  color: #666666;
}

.shop-announce {
  font-size: 22rpx;
  color: #999999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
