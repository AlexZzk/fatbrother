<view class="empty-state">
  <text class="empty-state__icon">{{icon}}</text>
  <text class="empty-state__text">{{text}}</text>
  <text wx:if="{{description}}" class="empty-state__description">{{description}}</text>
  <button
    wx:if="{{buttonText}}"
    class="empty-state__button"
    bind:tap="onActionTap"
  >{{buttonText}}</button>
</view>
