.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 80rpx;
}

.empty-state__icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.empty-state__text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.empty-state__description {
  font-size: 24rpx;
  color: #CCCCCC;
  margin-top: 8rpx;
  text-align: center;
}

.empty-state__button {
  margin-top: 32rpx;
  height: 72rpx;
  padding: 0 48rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #FF6B35, #FF8F5E);
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  line-height: 1;
}

.empty-state__button::after {
  border: none;
}
