<nav-bar left-arrow="{{false}}">
  <view slot="left" class="location-bar" bindtap="onLocationTap">
    <text class="location-icon">📍</text>
    <text class="location-name {{locationFailed ? 'location-name--failed' : ''}}">{{locationName}}</text>
    <text class="location-arrow">∨</text>
  </view>
</nav-bar>

<view class="page-container">
  <!-- 搜索框 -->
  <view class="search-bar" bindtap="onSearchTap">
    <text class="search-icon">🔍</text>
    <text class="search-placeholder">搜索商家、美食</text>
  </view>

  <!-- 商家列表 -->
  <block wx:if="{{!loading}}">
    <view wx:if="{{shopList.length}}" class="shop-section">
      <view class="section-title">{{latitude ? '附近商家' : '推荐商家'}}</view>
      <view class="shop-list">
        <shop-card
          wx:for="{{shopList}}"
          wx:key="_id"
          shop="{{item}}"
          bind:tap="onShopTap"
        />
      </view>

      <view wx:if="{{loadingMore}}" class="load-more">
        <text>加载中...</text>
      </view>
      <view wx:elif="{{!hasMore}}" class="load-more">
        <text>没有更多了</text>
      </view>
    </view>

    <view wx:else class="empty-wrap">
      <empty-state text="附近暂无营业商家，稍后再看看吧" />
    </view>
  </block>

  <!-- 加载中 -->
  <view wx:elif="{{loading}}" class="loading-center">
    <text>加载中...</text>
  </view>
</view>

<custom-tab-bar active="{{0}}" />
