/* 订单确认页 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 16rpx 0 160rpx;
}

.section-card {
  margin: 0 24rpx 16rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #222222;
  margin-bottom: 20rpx;
}

/* 配送方式选择 */
.delivery-type-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.delivery-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 12rpx;
  border: 2rpx solid #EEEEEE;
  font-size: 28rpx;
  color: #666666;
  background-color: #F9F9F9;
}

.delivery-tab--active {
  border-color: #FF6B35;
  color: #FF6B35;
  background-color: #FFF3EE;
  font-weight: 500;
}

/* 地址选择器 */
.address-selector {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  margin-top: 4rpx;
}

.address-selected {
  flex: 1;
}

.address-contact {
  display: flex;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.address-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #222222;
}

.address-phone {
  font-size: 26rpx;
  color: #666666;
}

.address-detail {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

.address-empty {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.address-empty-icon {
  font-size: 28rpx;
}

.address-empty-text {
  font-size: 28rpx;
  color: #999999;
}

.address-arrow {
  font-size: 24rpx;
  color: #CCCCCC;
  padding-left: 12rpx;
}

/* 取餐方式（自取地址） */
.pickup-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.pickup-icon {
  font-size: 28rpx;
}

.pickup-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.pickup-address {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
}

.address-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}

/* 商品清单 */
.product-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.product-row:last-child {
  border-bottom: none;
}

.product-info {
  flex: 1;
  margin-right: 16rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333333;
}

.product-spec {
  font-size: 24rpx;
  color: #999999;
}

.product-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
}

.product-qty {
  font-size: 26rpx;
  color: #666666;
}

.product-price {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
  display: flex;
  align-items: baseline;
}

/* 价格明细 */
.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
}

.price-label {
  font-size: 26rpx;
  color: #666666;
}

.price-value {
  font-size: 26rpx;
  color: #333333;
  display: flex;
  align-items: baseline;
}

.price-divider {
  height: 1rpx;
  background-color: #F0F0F0;
  margin: 12rpx 0;
}

.price-row--total .price-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.price-value--total {
  font-size: 32rpx;
  font-weight: 700;
  color: #FF3B30;
}

/* 备注 */
.remark-input {
  width: 100%;
  height: 160rpx;
  font-size: 26rpx;
  color: #333333;
  padding: 16rpx;
  background-color: #F7F8FA;
  border-radius: 12rpx;
  box-sizing: border-box;
}

/* 底部提交栏 */
.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
  z-index: 100;
}

.submit-total {
  display: flex;
  align-items: baseline;
}

.submit-label {
  font-size: 26rpx;
  color: #333333;
}

.submit-price {
  font-size: 36rpx;
  font-weight: 700;
  color: #FF3B30;
  display: flex;
  align-items: baseline;
}

.submit-btn {
  padding: 0 48rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #FF6B35;
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 999rpx;
  text-align: center;
}

.submit-btn--disabled {
  background-color: #CCCCCC;
}

/* 优惠券入口 */
.coupon-card {
  cursor: pointer;
}

.coupon-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.coupon-icon {
  font-size: 32rpx;
}

.coupon-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  flex: 1;
}

.coupon-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.coupon-selected {
  font-size: 28rpx;
  color: #FF3B30;
  font-weight: 600;
}

.coupon-name {
  font-size: 24rpx;
  color: #999999;
  margin-left: 4rpx;
}

.coupon-placeholder {
  font-size: 26rpx;
  color: #AAAAAA;
}

.coupon-arrow {
  font-size: 24rpx;
  color: #CCCCCC;
  margin-left: 4rpx;
}

.coupon-clear {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999999;
  text-decoration: underline;
}

/* 起送价提示 */
.min-order-tip {
  background-color: #FFF3E0;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #E65100;
}

/* 不在配送范围 */
.no-delivery {
  font-size: 24rpx;
  color: #999999;
}

/* 促销折扣行 */
.promo-row .price-label--discount {
  color: #FF3B30;
}

.price-value--discount {
  color: #FF3B30;
  font-size: 26rpx;
  font-weight: 600;
}

/* 优惠券弹窗 */
.coupon-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.coupon-popup {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.coupon-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.coupon-popup-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222222;
}

.coupon-popup-close {
  font-size: 36rpx;
  color: #999999;
  padding: 8rpx;
}

.coupon-list {
  overflow-y: auto;
  padding: 16rpx 24rpx 24rpx;
}

.coupon-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border: 2rpx solid #FF6B35;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}

.coupon-item--disabled {
  border-color: #E0E0E0;
  opacity: 0.6;
}

.coupon-amount-block {
  background: linear-gradient(135deg, #FF6B35, #FF9A57);
  padding: 24rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 120rpx;
}

.coupon-item--disabled .coupon-amount-block {
  background: #E0E0E0;
}

.coupon-yuan {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.coupon-amount {
  font-size: 48rpx;
  color: #FFFFFF;
  font-weight: 700;
  line-height: 1.1;
}

.coupon-detail {
  flex: 1;
  padding: 16rpx 20rpx;
}

.coupon-detail-name {
  font-size: 28rpx;
  color: #222222;
  font-weight: 500;
  display: block;
  margin-bottom: 6rpx;
}

.coupon-detail-condition {
  font-size: 24rpx;
  color: #666666;
  display: block;
  margin-bottom: 4rpx;
}

.coupon-detail-expire {
  font-size: 22rpx;
  color: #AAAAAA;
  display: block;
}

.coupon-check {
  padding: 0 20rpx;
  font-size: 36rpx;
  color: #FF6B35;
  font-weight: 700;
}

.coupon-unavail {
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #999999;
}

.coupon-empty {
  padding: 80rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.coupon-empty-text {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.coupon-empty-hint {
  font-size: 24rpx;
  color: #999999;
}
