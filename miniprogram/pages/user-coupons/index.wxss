/* 我的优惠券页 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 40rpx;
}

/* 领券横幅 */
.activity-banner {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FF6B35, #FF9A57);
  padding: 24rpx 32rpx;
  margin: 16rpx 24rpx;
  border-radius: 16rpx;
}

.activity-banner-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.activity-banner-text {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.activity-banner-arrow {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Tabs */
.tabs {
  display: flex;
  background-color: #FFFFFF;
  margin: 0 24rpx 16rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.tab-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666666;
}

.tab-item--active {
  color: #FF6B35;
  font-weight: 600;
  border-bottom: 4rpx solid #FF6B35;
}

/* 券列表 */
.coupon-list {
  padding: 0 24rpx;
}

.coupon-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  border: 2rpx solid #FF6B35;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}

.coupon-item--used {
  border-color: #E0E0E0;
  opacity: 0.7;
}

.coupon-amount-block {
  background: linear-gradient(135deg, #FF6B35, #FF9A57);
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 110rpx;
}

.coupon-item--used .coupon-amount-block {
  background: #CCCCCC;
}

.coupon-yuan {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.coupon-value {
  font-size: 52rpx;
  color: #FFFFFF;
  font-weight: 700;
  line-height: 1.1;
}

.coupon-info {
  flex: 1;
  padding: 16rpx 20rpx;
}

.coupon-name {
  font-size: 28rpx;
  color: #222222;
  font-weight: 500;
  display: block;
  margin-bottom: 6rpx;
}

.coupon-condition {
  font-size: 24rpx;
  color: #666666;
  display: block;
  margin-bottom: 4rpx;
}

.coupon-expire {
  font-size: 22rpx;
  color: #AAAAAA;
  display: block;
}

.coupon-status {
  padding: 0 20rpx;
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
}

.status-text--unused {
  color: #FF6B35;
}

.status-text--used {
  color: #999999;
}

.status-text--expired {
  color: #CCCCCC;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 32rpx 60rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
}

.loading-center {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 领券弹窗 */
.activity-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.activity-popup {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  padding-bottom: env(safe-area-inset-bottom);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.activity-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222222;
}

.activity-close {
  font-size: 36rpx;
  color: #999999;
  padding: 8rpx;
}

.activity-list {
  overflow-y: auto;
  padding: 16rpx 24rpx 24rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #FFF3E0, #FFFFFF);
  border: 1rpx solid #FFCC80;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  gap: 20rpx;
}

.activity-left {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.activity-amount {
  font-size: 52rpx;
  color: #FF6B35;
  font-weight: 700;
  line-height: 1.1;
}

.activity-condition {
  font-size: 22rpx;
  color: #E65100;
  text-align: center;
}

.activity-right {
  flex: 1;
}

.activity-name {
  font-size: 28rpx;
  color: #222222;
  font-weight: 500;
  display: block;
  margin-bottom: 6rpx;
}

.activity-desc {
  font-size: 24rpx;
  color: #666666;
  display: block;
  margin-bottom: 16rpx;
}

.claim-btn {
  display: inline-block;
  padding: 10rpx 32rpx;
  background: linear-gradient(135deg, #FF6B35, #FF9A57);
  color: #FFFFFF;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 999rpx;
}

.claim-btn--disabled {
  background: #E0E0E0;
  color: #999999;
}

.activity-empty {
  padding: 80rpx 32rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
}
