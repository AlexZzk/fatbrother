.page-container {
  min-height: 100vh;
  background-color: #FFFFFF;
  display: flex;
  flex-direction: column;
}

.guide-hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx 48rpx;
}

.guide-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.guide-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #222222;
  margin-bottom: 16rpx;
}

.guide-subtitle {
  font-size: 28rpx;
  color: #666666;
}

.guide-features {
  padding: 24rpx 48rpx;
  flex: 1;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 0;
}

.feature-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.feature-text {
  display: flex;
  flex-direction: column;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #999999;
}

.guide-actions {
  padding: 48rpx 48rpx;
  padding-bottom: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-apply {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #1677FF, #4A9AFF);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 999rpx;
  border: none;
  text-align: center;
}

.btn-apply::after {
  border: none;
}

.link-status {
  margin-top: 32rpx;
  font-size: 26rpx;
  color: #999999;
}
