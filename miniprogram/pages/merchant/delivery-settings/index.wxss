/* 配送费规则页 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 16rpx 24rpx 160rpx;
}

.tip-card {
  background-color: #E3F2FD;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #1565C0;
  display: block;
  line-height: 1.6;
}

.rules-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.rule-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.rule-item:last-child {
  border-bottom: none;
}

.rule-info {
  flex: 1;
}

.rule-distance {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  display: block;
  margin-bottom: 6rpx;
}

.rule-fee {
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 600;
}

.rule-fee--free {
  color: #2E7D32;
}

.rule-fee--no {
  color: #999999;
}

.rule-actions {
  display: flex;
  gap: 16rpx;
}

.rule-btn {
  padding: 8rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.rule-btn--edit {
  background-color: #FFF3E0;
  color: #E65100;
}

.rule-btn--delete {
  background-color: #FFEBEE;
  color: #C62828;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0 60rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999999;
  text-align: center;
}

.loading-center {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
  color: #999999;
  font-size: 28rpx;
}

.add-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
}

.add-btn {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(135deg, #1677FF, #4A9AFF);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 999rpx;
}

/* 弹窗 */
.form-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.form-popup {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 32rpx calc(40rpx + env(safe-area-inset-bottom));
}

.form-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222222;
  margin-bottom: 32rpx;
  text-align: center;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  font-size: 26rpx;
  color: #666666;
  display: block;
  margin-bottom: 12rpx;
}

.form-row {
  display: flex;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin-bottom: 8rpx;
}

.form-currency {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
  margin-right: 8rpx;
}

.form-unit {
  font-size: 28rpx;
  color: #666666;
  margin-left: 8rpx;
}

.form-input {
  flex: 1;
  height: 80rpx;
  background-color: transparent;
  font-size: 28rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #999999;
  display: block;
}

.form-actions {
  display: flex;
  gap: 24rpx;
  margin-top: 16rpx;
}

.form-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  padding: 0;
  text-align: center;
}

.form-btn::after {
  border: none;
}

.form-btn--cancel {
  background-color: #F5F5F5;
  color: #666666;
}

.form-btn--confirm {
  background: linear-gradient(135deg, #1677FF, #4A9AFF);
  color: #FFFFFF;
}
