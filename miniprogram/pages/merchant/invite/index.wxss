/* 邀请码页 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 60rpx;
}

/* 邀请码卡片 */
.invite-card {
  margin: 24rpx;
  padding: 48rpx 40rpx;
  background: linear-gradient(135deg, #1677FF, #4A9AFF);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(22, 119, 255, 0.3);
}

.card-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-bottom: 32rpx;
}

.code-box {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 24rpx 60rpx;
  margin-bottom: 32rpx;
}

.code-text {
  font-size: 56rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 16rpx;
}

.copy-btn {
  width: 280rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #FFFFFF;
  color: #1677FF;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 999rpx;
  border: none;
  padding: 0;
}

.copy-btn::after {
  border: none;
}

/* 推荐规则 */
.rules-section {
  margin: 24rpx;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.rules-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 20rpx;
}

.rules-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.rule-item {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
}

.rule-dot {
  font-size: 28rpx;
  color: #1677FF;
  flex-shrink: 0;
}

.rule-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
}

/* 推荐记录 */
.records-section {
  margin: 24rpx;
}

.records-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.records-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.records-count {
  font-size: 24rpx;
  color: #999999;
}

.records-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.record-item {
  padding: 28rpx 32rpx;
}

.record-item--border {
  border-bottom: 1rpx solid #F0F0F0;
}

.record-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.record-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.record-type {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 999rpx;
}

.record-type--direct {
  background-color: #E6F4FF;
  color: #1677FF;
}

.record-type--indirect {
  background-color: #FFF7E6;
  color: #FA8C16;
}

.record-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-time {
  font-size: 24rpx;
  color: #999999;
}

.record-status {
  font-size: 22rpx;
}

.record-status--active {
  color: #52C41A;
}

.record-status--pending {
  color: #FA8C16;
}

.record-status--suspended {
  color: #999999;
}

.records-empty {
  padding: 60rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999999;
}

.loading-center {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
  color: #999999;
  font-size: 28rpx;
}
