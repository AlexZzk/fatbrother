/* 订单管理 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* Tabs bar */
.tabs-bar {
  display: flex;
  background-color: #FFFFFF;
  position: sticky;
  top: 0;
  z-index: 10;
  border-bottom: 1rpx solid #EEEEEE;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0 20rpx;
  font-size: 28rpx;
  color: #666666;
  position: relative;
}

.tab-item--active {
  color: #FF6B35;
  font-weight: 600;
}

.tab-underline {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background-color: #FF6B35;
  border-radius: 2rpx;
}

.tab-badge {
  position: absolute;
  top: 8rpx;
  right: 16rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: #FF3B30;
  color: #FFFFFF;
  font-size: 20rpx;
  border-radius: 999rpx;
  padding: 0 8rpx;
}

/* Notify bar */
.notify-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
  padding: 16rpx 32rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.notify-text {
  font-size: 26rpx;
  color: #666666;
}

/* Loading */
.loading-center {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
  color: #999999;
  font-size: 28rpx;
}

/* Order list */
.order-list {
  padding: 24rpx;
}

/* Order card */
.order-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* Card header */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.card-header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.order-no {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.order-time {
  font-size: 24rpx;
  color: #999999;
}

/* Countdown */
.countdown {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.countdown-label {
  font-size: 22rpx;
  color: #999999;
}

.countdown-time {
  font-size: 26rpx;
  font-weight: 600;
  color: #FF9500;
  font-family: 'Menlo', monospace;
}

.countdown--urgent .countdown-time {
  color: #FF3B30;
  animation: blink 1s ease-in-out infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

.ready-time {
  font-size: 24rpx;
  color: #00B578;
}

/* Card items */
.card-items {
  margin-bottom: 20rpx;
}

.item-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 0;
}

.item-name-wrap {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.item-name {
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-spec {
  font-size: 24rpx;
  color: #999999;
  margin-left: 4rpx;
  flex-shrink: 0;
}

.item-qty {
  font-size: 28rpx;
  color: #666666;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* Pickup code bar */
.pickup-code-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #F0FFF4;
  border: 2rpx solid #00B578;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  margin-bottom: 20rpx;
}

.pickup-code-label {
  font-size: 26rpx;
  color: #00B578;
  font-weight: 500;
}

.pickup-code-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #00B578;
  letter-spacing: 8rpx;
  font-family: 'Menlo', monospace;
}

/* Card footer */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.card-price {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 24rpx;
  color: #999999;
  margin-right: 8rpx;
}

.price-yen {
  font-size: 24rpx;
  color: #FF6B35;
  font-weight: 600;
}

/* Action buttons */
.card-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 28rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 500;
  text-align: center;
}

.action-btn--reject {
  background-color: #F5F5F5;
  color: #666666;
  border: 1rpx solid #E0E0E0;
}

.action-btn--accept {
  background-color: #FF6B35;
  color: #FFFFFF;
}

.action-btn--ready {
  background-color: #1677FF;
  color: #FFFFFF;
}

.action-btn--complete {
  background-color: #00B578;
  color: #FFFFFF;
}

/* Load more / No more */
.loading-more, .no-more {
  text-align: center;
  padding: 24rpx 0;
  color: #999999;
  font-size: 24rpx;
}

/* ========== Reject Modal ========== */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 600rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  text-align: center;
  margin-bottom: 32rpx;
}

.reason-list {
  margin-bottom: 24rpx;
}

.reason-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #333333;
  border-bottom: 1rpx solid #F5F5F5;
}

.reason-item--selected {
  color: #FF6B35;
}

.reason-radio {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #CCCCCC;
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
}

.reason-radio--checked {
  border-color: #FF6B35;
}

.reason-radio--checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  background-color: #FF6B35;
  border-radius: 50%;
}

.reason-input {
  width: 100%;
  height: 160rpx;
  background-color: #F7F7F7;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #333333;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.modal-buttons {
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-btn--cancel {
  background-color: #F5F5F5;
  color: #666666;
}

.modal-btn--confirm {
  background-color: #FF3B30;
  color: #FFFFFF;
}

/* ========== New Order Popup ========== */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1001;
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-content {
  width: 560rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.popup-icon {
  font-size: 72rpx;
  margin-bottom: 16rpx;
}

.popup-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FF6B35;
  margin-bottom: 24rpx;
}

.popup-summary {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 32rpx;
}

.popup-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF6B35;
}

.popup-actions {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.popup-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
}

.popup-btn--dismiss {
  background-color: #F5F5F5;
  color: #666666;
}

.popup-btn--view {
  background-color: #FF6B35;
  color: #FFFFFF;
}
