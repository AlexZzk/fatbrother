/* 规格配置 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 快捷模板 */
.template-section {
  margin: 24rpx;
  padding: 24rpx 28rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.section-title {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.template-list {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.template-btn {
  padding: 12rpx 32rpx;
  background-color: #E6F4FF;
  color: #1677FF;
  font-size: 26rpx;
  border-radius: 999rpx;
}

/* 规格组卡片 */
.group-card {
  margin: 24rpx;
  padding: 28rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.group-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333333;
}

.group-delete {
  font-size: 26rpx;
  color: #FF4D4F;
  padding: 4rpx 12rpx;
}

.group-name-input {
  width: 100%;
  height: 72rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* 属性开关 */
.toggle-row {
  display: flex;
  gap: 40rpx;
  margin-bottom: 20rpx;
}

.toggle-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  font-size: 26rpx;
  color: #333333;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid #DCDEE0;
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #FFFFFF;
}

.checkbox--checked {
  background-color: #1677FF;
  border-color: #1677FF;
}

/* 选项列表 */
.spec-list {
  margin-bottom: 16rpx;
}

.spec-header-row {
  display: flex;
  align-items: center;
  padding: 8rpx 0;
  margin-bottom: 8rpx;
}

.spec-col-name {
  flex: 1;
  font-size: 24rpx;
  color: #999999;
}

.spec-col-price {
  width: 160rpx;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.spec-col-del {
  width: 48rpx;
}

.spec-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.spec-name-input {
  flex: 1;
  height: 64rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 26rpx;
  box-sizing: border-box;
}

.spec-price-input {
  width: 160rpx;
  height: 64rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 26rpx;
  text-align: center;
  box-sizing: border-box;
}

.spec-delete {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 32rpx;
  color: #999999;
}

.add-spec-btn {
  text-align: center;
  padding: 16rpx;
  font-size: 26rpx;
  color: #1677FF;
  border: 2rpx dashed #D9E8FF;
  border-radius: 8rpx;
}

/* 空状态 */
.empty-hint {
  text-align: center;
  padding: 80rpx 0;
  font-size: 26rpx;
  color: #999999;
}

/* 保存按钮 */
.save-wrap {
  padding: 40rpx 24rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1677FF;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.save-btn::after {
  border: none;
}
