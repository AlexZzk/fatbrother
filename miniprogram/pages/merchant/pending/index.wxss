.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
}

.pending-hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 32rpx 48rpx;
  background-color: #FFFFFF;
}

.pending-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.pending-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222222;
  margin-bottom: 12rpx;
}

.pending-subtitle {
  font-size: 26rpx;
  color: #666666;
}

.info-card {
  margin: 24rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 8rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
}

.status-pending {
  color: #FF9500;
  font-weight: 500;
}

.pending-footer {
  padding: 48rpx;
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: #999999;
}

.loading-center {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 200rpx;
  color: #999999;
  font-size: 28rpx;
}
