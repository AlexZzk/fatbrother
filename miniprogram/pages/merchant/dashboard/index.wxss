.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 24rpx;
}

/* 营业状态卡片 */
.status-card {
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-card--open {
  background: linear-gradient(135deg, #52C41A, #73D13D);
}

.status-card--closed {
  background: linear-gradient(135deg, #8C8C8C, #BFBFBF);
}

.status-info {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.status-dot {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-right: 8rpx;
}

.status-dot--open {
  color: #FFFFFF;
}

.status-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
}

.status-shop-name {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 24rpx;
}

.btn-toggle {
  width: 280rpx;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  text-align: center;
}

.btn-toggle::after {
  border: none;
}

.btn-toggle--close {
  background-color: rgba(255, 255, 255, 0.9);
  color: #FF3B30;
}

.btn-toggle--open {
  background-color: rgba(255, 255, 255, 0.9);
  color: #52C41A;
}

/* 统计卡片 */
.stats-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.card-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-bottom: 24rpx;
  display: block;
}

.stats-grid {
  display: flex;
}

.stats-item {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.stats-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #222222;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999999;
}

/* 待处理订单 */
.alert-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 28rpx 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.alert-left {
  display: flex;
  align-items: center;
}

.alert-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.alert-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.alert-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.alert-count {
  font-size: 24rpx;
  color: #666666;
}

.alert-num {
  color: #FF3B30;
  font-weight: 700;
}

.alert-arrow {
  font-size: 24rpx;
  color: #CCCCCC;
}

/* 功能宫格 */
.func-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.func-item {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.func-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.func-label {
  font-size: 26rpx;
  color: #333333;
}

.func-item--disabled {
  opacity: 0.45;
}

.func-hint {
  font-size: 20rpx;
  color: #999999;
  margin-top: 4rpx;
}

.loading-center {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
  color: #999999;
  font-size: 28rpx;
}
