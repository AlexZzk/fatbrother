/* 店铺设置 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
}

.section {
  margin-top: 24rpx;
}

.section-title {
  font-size: 24rpx;
  color: #999999;
  padding: 0 32rpx 16rpx;
}

.section-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.avatar-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.avatar-label {
  font-size: 28rpx;
  color: #333333;
}

.avatar-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.avatar-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background-color: #F5F5F5;
}

.avatar-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #999999;
}

.avatar-arrow {
  font-size: 24rpx;
  color: #CCCCCC;
}

.banner-img {
  width: 180rpx;
  height: 100rpx;
  border-radius: 8rpx;
  background-color: #F5F5F5;
}

.banner-placeholder {
  width: 180rpx;
  height: 100rpx;
  border-radius: 8rpx;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #999999;
}

.loading-center {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
  color: #999999;
  font-size: 28rpx;
}

/* 编辑弹窗 */
.edit-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-popup {
  width: 560rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 40rpx;
}

.edit-header {
  margin-bottom: 24rpx;
}

.edit-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222222;
}

.edit-input {
  width: 100%;
  height: 80rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}

.edit-textarea {
  width: 100%;
  min-height: 160rpx;
  background-color: #F5F5F5;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}

.edit-actions {
  display: flex;
  gap: 24rpx;
}

.edit-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  padding: 0;
}

.edit-btn::after {
  border: none;
}

.edit-btn--cancel {
  background-color: #F5F5F5;
  color: #666666;
}

.edit-btn--confirm {
  background: linear-gradient(135deg, #1677FF, #4A9AFF);
  color: #FFFFFF;
}
