/* 商品编辑 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: env(safe-area-inset-bottom);
}

.form-card {
  margin: 24rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 8rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.form-section {
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}

.form-section:last-child {
  border-bottom: none;
}

.form-section--link {
  padding: 28rpx 0;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.required {
  color: #FF4D4F;
  margin-right: 4rpx;
}

.form-input {
  width: 100%;
  height: 72rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-picker {
  height: 72rpx;
  line-height: 72rpx;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.form-picker--placeholder {
  color: #C0C4CC;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999999;
}

.price-input-wrap {
  display: flex;
  align-items: center;
  border: 2rpx solid #E8E8E8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.price-prefix {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: 600;
  margin-right: 8rpx;
}

.price-input {
  flex: 1;
  border: none;
  height: 100%;
  padding: 0;
}

.form-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.spec-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.spec-count {
  font-size: 26rpx;
  color: #999999;
  font-weight: 400;
}

.link-arrow {
  font-size: 28rpx;
  color: #CCCCCC;
}

.save-wrap {
  padding: 40rpx 24rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1677FF;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 16rpx;
  border: none;
}

.save-btn[disabled] {
  background-color: #A0CFFF;
}

.save-btn::after {
  border: none;
}

.loading-center {
  text-align: center;
  padding: 200rpx 0;
  color: #999999;
  font-size: 28rpx;
}
