/* 搜索 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 24rpx;
}

/* 搜索头部 */
.search-header {
  display: flex;
  align-items: center;
  padding: 8rpx 24rpx 16rpx;
  padding-top: calc(env(safe-area-inset-top) + 16rpx);
  background-color: #FFFFFF;
}

.search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  background-color: #F5F5F5;
  border-radius: 999rpx;
  padding: 12rpx 24rpx;
  height: 64rpx;
  box-sizing: border-box;
}

.search-icon {
  font-size: 28rpx;
  color: #999999;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.search-clear {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #CCCCCC;
  border-radius: 50%;
  margin-left: 8rpx;
  color: #FFFFFF;
  font-size: 24rpx;
}

.search-cancel {
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1677FF;
  flex-shrink: 0;
}

/* 搜索历史 */
.history-section {
  margin-top: 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
}

.section-clear {
  font-size: 24rpx;
  color: #999999;
}

.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.history-tag {
  background-color: #FFFFFF;
  border-radius: 999rpx;
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  color: #666666;
}

/* 搜索结果 */
.result-list {
  margin-top: 8rpx;
}

.loading-center {
  display: flex;
  justify-content: center;
  padding-top: 200rpx;
  color: #999999;
  font-size: 28rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 24rpx 0;
  color: #999999;
  font-size: 24rpx;
}
