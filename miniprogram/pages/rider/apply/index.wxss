.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding: 16rpx 24rpx 160rpx;
}

.tip-card {
  background: linear-gradient(135deg, #FFF3E0, #FFE0B2);
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
}

.tip-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #E65100;
  display: block;
  margin-bottom: 12rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #795548;
  display: block;
  line-height: 1.6;
}

.form-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 28rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 16rpx;
}

.form-item {
  display: flex;
  align-items: center;
  min-height: 100rpx;
  padding: 20rpx 0;
}

.form-item--select {
  cursor: pointer;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  width: 160rpx;
  flex-shrink: 0;
}

.form-label.required::before {
  content: '*';
  color: #FF4D4F;
  margin-right: 4rpx;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #222222;
  text-align: right;
}

.select-right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8rpx;
}

.select-value {
  font-size: 28rpx;
  color: #222222;
}

.select-placeholder {
  font-size: 28rpx;
  color: #CCCCCC;
}

.arrow {
  font-size: 24rpx;
  color: #CCCCCC;
}

.divider {
  height: 1rpx;
  background-color: #F5F5F5;
}

.agreement-row {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 24rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 16rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  border: 2rpx solid #DCDEE0;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #FFFFFF;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.checkbox--checked {
  background-color: #FF6B35;
  border-color: #FF6B35;
}

.agreement-text {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.6;
  flex: 1;
}

.submit-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background-color: #FFFFFF;
  border-top: 1rpx solid #F0F0F0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #FF6B35, #FF9A57);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 999rpx;
  border: none;
  text-align: center;
}

.submit-btn::after { border: none; }
