/* 我的 */
.page-container {
  min-height: 100vh;
  background-color: #F5F5F5;
}

/* 用户头部区域 */
.user-header {
  background: linear-gradient(135deg, #FF6B35, #FF8F5E);
  padding: 48rpx 32rpx 40rpx;
}

.user-header__content {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  flex-shrink: 0;
}

.user-avatar--default {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.3);
}

.user-avatar__icon {
  font-size: 56rpx;
}

.user-info {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1.4;
}

.user-phone {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

.user-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 8rpx;
}

.user-arrow {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-left: 16rpx;
}

/* 功能分区 */
.section {
  margin-top: 24rpx;
}

.section-title {
  font-size: 24rpx;
  color: #999999;
  padding: 0 32rpx 16rpx;
}

.section-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 客服按钮样式重置 */
.contact-btn {
  display: block;
  padding: 0;
  margin: 0;
  background: none;
  border: none;
  line-height: normal;
  text-align: left;
  font-size: inherit;
}

.contact-btn::after {
  border: none;
}

/* 底部安全区域 */
.safe-bottom {
  height: 120rpx;
}

/* 登录弹窗 */
.login-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-popup {
  width: 560rpx;
  background-color: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.login-popup__icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.login-popup__title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222222;
  margin-bottom: 16rpx;
}

.login-popup__desc {
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 48rpx;
}

.login-popup__actions {
  display: flex;
  gap: 24rpx;
}

.login-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  border: none;
  padding: 0;
}

.login-btn::after {
  border: none;
}

.login-btn--cancel {
  background-color: #F5F5F5;
  color: #666666;
}

.login-btn--confirm {
  background: linear-gradient(135deg, #FF6B35, #FF8F5E);
  color: #FFFFFF;
}
